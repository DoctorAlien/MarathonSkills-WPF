        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" Margin="128,121,0,0" Grid.Row="1" Style="{StaticResource ResourceKey=placeholder}" Tag="Re-enter password" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="128,157,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Option B" VerticalAlignment="Top" Grid.Column="1" Height="16" Width="47"/>
        <TextBlock xml:space="preserve" HorizontalAlignment="Left" Margin="89,176,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" Height="64" Width="152">
            Fun Run
            21km Half Marathon
        </TextBlock>
        <TextBlock xml:space="preserve" HorizontalAlignment="Center" Margin="89,225,91,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" TextAlignment="Center" Height="80" Width="153">
            Registration status:
            Registered
            Payment Confirmend
        </TextBlock>
        <Button Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="220,311,0,0" Grid.Row="1" Height="20"/>
        <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="20,311,0,0" Grid.Row="1" Grid.Column="1" Height="20"/>
        <DatePicker HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,153,0,0" Grid.Row="1" Width="175"/>

    </Grid>
</sjj:Master>
